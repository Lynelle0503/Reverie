<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:id="@+id/ProfilePic"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ProfilePic"
        android:id="@+id/Username"
        android:inputType="textPersonName"
        android:drawableStart="@drawable/user"
        android:hint="UserName"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorPrimary"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/Email"
        android:layout_below="@+id/Username"
        android:inputType="textEmailAddress"
        android:hint="Email Id"
        android:drawableStart="@drawable/email"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorPrimary"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/Pswd"
        android:layout_below="@+id/Email"
        android:drawableStart="@drawable/pswd"
        android:inputType="textPassword"
        android:hint="Password"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorPrimary"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:drawableStart="@drawable/pswd"
        android:id="@+id/ConfPswd"
        android:layout_below="@+id/Pswd"
        android:inputType="textPassword"
        android:hint="Confirm Password"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorPrimary"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/ConfPswd"
        android:layout_centerHorizontal="true"
        android:id="@+id/radio">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Male"
            android:text="Male"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:layout_marginRight="22dp"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Female"
            android:text="Female"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"/>
    </RadioGroup>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary"
        android:text="What are you dealing with?"
        android:layout_below="@+id/radio"
        android:id="@+id/text"
        android:textSize="20sp"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:id="@+id/chkmedi"
        android:layout_centerHorizontal="true"
        android:text="Meditation"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chkmedi"
        android:id="@+id/chksleep"
        android:layout_centerHorizontal="true"
        android:text="Sleep Booster"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chksleep"
        android:id="@+id/chkanx"
        android:layout_centerHorizontal="true"
        android:text="Anxiety"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"/>

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/Capture"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/chkanx"
        android:text="CAPTURE"
        android:drawableStart="@drawable/camera"
        android:background="@color/colorPrimary"
        android:textSize="25sp"
        android:textColor="@color/colorPrimaryDark"
        android:padding="5dp"/>
    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/Sign"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Capture"
        android:text="SIGN UP"
        android:drawableStart="@drawable/signup"
        android:background="@color/colorPrimary"
        android:textSize="25sp"
        android:textColor="@color/colorPrimaryDark"
        android:padding="5dp"
        android:onClick="Signup"/>
</RelativeLayout>